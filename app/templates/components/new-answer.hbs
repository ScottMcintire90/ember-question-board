{{#if newAnswer}}
<h3>Your Answer</h3>
<div class="newAnswerForm">
  <form>
    <div class="form-group">
      <label for="userName">Name:</label>
      {{input value=userName id="userName" class="form-control"}}
    </div>
    <div class="form-group">
      <label for="comment">Answer:</label>
      {{input value=comment id="comment" class="form-control"}}
    </div>
    <button class="btn btn-success" {{action 'saveAnswer'}}>Submit</button>
  </form>
</div>
{{else}}
  <center><button class="btn btn-primary" {{action 'answerShow'}}>Answer this question</button></center>
{{/if}}
