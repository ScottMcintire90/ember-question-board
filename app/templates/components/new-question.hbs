{{#if newQuestion}}
<div class="newQuestionForm">
  <form>
    <div class="form-group">
      <label for="user">Name:</label>
      {{input value=user id="user" class="form-control"}}
    </div>
    <div class="form-group">
      <label for="comment">Answer:</label>
      {{input value=comment id="comment" class="form-control"}}
    </div>
    <button class="btn btn-success" {{action 'saveAnswer'}}>Submit</button>
  </form>
</div>
{{else}}
  <button class="btn btn-primary" {{action 'questionShow'}}>Add new Question</button>
{{/if}}
